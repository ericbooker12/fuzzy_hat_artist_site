<% if @archived_galleries %>
  <h1>These have been archived</h1>
    <ul>
      <% @archived_galleries.each do |gallery| %>
      <li>
        <%= link_to gallery.name, gallery_path(gallery.id)  %>
      </li>
      <% end %>
    </ul>

<% else %>
  <h1>There aren't any archived galleries.</h1>
<% end %>
<%= link_to 'Back', galleries_path %>


<h1><%= @gallery.name %></h1>

<div class="row" >
  <div class="col-md-4">
    <div id="gallery">
      <ul class="gallery-list">
        <% @collections.each do |collection| %>
        <li>
          <%= link_to collection.name, collection, class: "show-collection" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<br />
<br />
<% if user_signed_in? %>
  <% if @gallery.active? %>
    <%= link_to 'Archive', archive_gallery_path(@gallery.id), method: :patch %>
  <% else %>
    <%= link_to 'UN-archive gallery', un_archive_gallery_path(@gallery.id), method: :patch %>
  <% end %>
  <!-- Show archive link if active
  else show UN-archive link if not active -->

<% end %>

<%= simple_form_for [@gallery, @collection], html: { multipart: true } do |f| %>
  <% if @collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@collection.errors.count, "error") %> prohibited this collection from being saved:</h2>

      <ul>
      <% @collection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name, input_html: {class: 'form-control'} %>
  <%= f.input :thumbnail, input_html: {class: 'form-control'} %>
  <h2>drop in gallery in case it needs to change</h2><br />
  <%= f.button :submit, class: "btn btn-primary" %>

<% end %>

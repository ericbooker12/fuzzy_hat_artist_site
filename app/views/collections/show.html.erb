<div class="row">

	<div class="col-lg-12">
    <h1 class="page-header"><%= @collection.name %></h1>
  </div>

	<p>
		<strong>Thumbnail:</strong>
		<%= @collection.thumbnail %>
	</p>

	<p>
		<strong>Gallery:</strong>
		<%= @collection.gallery.name %>
	</p>

</div>

<div class="row">
	<div class="col-md-12">
		<ul id="list-of-images">
			<% if @collection.items.count > 0 %>
				<%	@collection.items.each do |item| %>
					<div class="col-md-4">
						<div class="thumbnail img-fluid">
							<li id="item-<%= item.id %>" class="item" >
								<%= link_to (image_tag(item.image.url(:thumb), class: "item-image img-fluid")), [@collection, item], class: "image img-fluid" %>
								</br>
								<%= link_to item.title, [@collection, item], title: 'show image', class: "img-caption" %>
								<% if user_signed_in? %>
									<%= link_to "Delete", [@collection, item], title: 'delete image', method: :delete  %>
								<% end %>
							</li>
						</div>
					</div>
				<% end %>
			<% else %>
				<p>There are no images in this collection.</p>
			<% end %>
		</ul>
	</div>
</div>
<div class="row">
	<div class="col-md-3" id="new-image-form"></div>
</div>

<div class="row" id="links">
  <% if user_signed_in? %>
		<%= link_to 'Add image', fetch_new_form_path(collection_id: @collection.id), class: 'btn btn-custom btn-sm', id: "add-image", remote: true %>
		<%= link_to 'Edit Collection', edit_collection_path(@collection), class: 'btn btn-custom btn-sm' %>
	<% end %>
	<%= link_to 'Back', gallery_collections_path(@collection.gallery_id), class: 'btn btn-custom btn-sm' %>
</div>

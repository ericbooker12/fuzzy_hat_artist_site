<p id="notice"><%= notice %></p>

<h1><%= @gallery.name %> Gallery</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Archive</th>
      <th>Thumbnail</th>
      <th>Gallery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.name %></td>
        <td><%= collection.archive %></td>
        <td><%= collection.thumbnail %></td>
        <td><%= collection.gallery.name %></td>
        <td><%= link_to 'Show', collection, title: collection.name %></td>
        <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%= link_to 'Destroy', collection_path(collection), method: :delete, data: { confirm: 'Are you sure? This cannot be undone.' } %></td>
        <td><%= link_to 'Archive', archive_collection_path(collection.id), method: :patch, data: { confirm: 'Are you sure? Do you want to move images?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Collection', new_gallery_collection_path %>

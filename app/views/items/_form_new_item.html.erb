<div class="border-form-div">
  <%= minimal_form_for [@collection, @item], html: { multipart: true }, id: "gotcha" do |f| %>
    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@item.errors.count, "error") %> prohibited this collection from being saved:</h2>

        <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-inputs">
      <%= f.input :title, input_html: {class: 'form-control taller'} %>
      <%= f.input :image, input_html: {class: 'form-control'} %>
      <p>Collection:</p>
      <%= f.association :collection %>
      <br />
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary space-below" %>
    </div>

  <% end %>
</div>
